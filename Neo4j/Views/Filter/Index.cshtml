@model Neo4j.ViewModels.FilterCBOVM

@{
    ViewData["Title"] = "Filter";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="content-page" class="content-page">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="card-body">
                    <h2>Filter Friends</h2>

                    <!-- Form lọc -->
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-4">
                                <label for="gender">Gender: </label>
                                <select id="gender" name="gender" class="form-control">
                                    <option value="">All</option>
                                    @foreach (var gender in Model.Genders)
                                    {
                                        <option value="@gender" selected="@(gender == Model.SelectedGender ? "selected" : "")">@gender</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label for="city">City: </label>
                                <select id="city" name="city" class="form-control">
                                    <option value="">All</option>
                                    @foreach (var city in Model.Cities)
                                    {
                                        <option value="@city" selected="@(city == Model.SelectedCity ? "selected" : "")">@city</option>


                                    }
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label for="maritalStatus">Marital Status: </label>
                                <select id="maritalStatus" name="maritalStatus" class="form-control">
                                    <option value="">All</option>
                                    @foreach (var marital in Model.Maritals)
                                    {
                                        <option value="@marital" selected="@(marital == Model.SelectedMaritals ? "selected" : "")">@marital</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Apply Filters</button>
                    </form>


                    <h2 class="mt-4">Friends</h2>
                    <div class="friend-list-tab mt-2">
                        <div class="tab-content">
                            <div class="tab-pane fade active show" id="all-friends" role="tabpanel">
                                <div class="card-body p-0">
                                    <div class="row">
                                        @foreach (var user in Model.Users)
                                        {
                                            <div class="col-md-6 col-lg-6 mb-3">
                                                <div class="iq-friendlist-block">
                                                    <div class="d-flex align-items-center justify-content-between">
                                                        <div class="d-flex align-items-center">
                                                            <a asp-controller="User" asp-action="RedirectToProfile" asp-route-id="@user.ID">
                                                                <img src="@user.ProfileImage" alt="@user.Name" class="img-fluid">
                                                            </a>
                                                            <div class="friend-info ms-3">
                                                                <h5>@user.Name</h5>
                                                                <p class="mb-0">City: @user.City</p>
                                                                <p class="mb-0">Gender: @user.Gender</p>
                                                                <p class="mb-0">MaritalStatus: @user.MaritalStatus</p>
                                                                <p class="mb-0">Followers: @user.FollowersCount</p>
                                                            </div>
                                                        </div>
                                                        <div class="card-header-toolbar d-flex align-items-center">
                                                            @if (user.IsCurrentUser)
                                                            {
                                                                //Không hiển thị button
                                                            }
                                                            else if (user.AreFriends == true)
                                                            {
                                                                <div class="dropdown">
                                                                    <span class="dropdown-toggle btn btn-secondary me-2" id="dropdownMenuButton01" data-bs-toggle="dropdown" aria-expanded="true" role="button">
                                                                        <i class="ri-check-line me-1 text-white"></i> Friend
                                                                    </span>
                                                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton01">
                                                                        <a class="dropdown-item" href="#">Close Friend</a>
                                                                        <a class="dropdown-item" href="#">Unfollow</a>
                                                                        <a class="dropdown-item" href="#">Unfriend</a>
                                                                        <a class="dropdown-item" href="#">Block</a>
                                                                    </div>
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                <span class="btn btn-secondary me-2" role="button">Add Friend</span>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
