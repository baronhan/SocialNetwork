@model Neo4j.ViewModels.AccountSettingVM

<form asp-controller="User" asp-action="AccountSetting" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="userName" class="form-label">User Name:</label>
        <input asp-for="userName" type="text" class="form-control" id="uname">
        <span asp-validation-for="userName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="email" class="form-label">Email Id:</label>
        <input asp-for="email" type="email" class="form-control" id="email">
        <span asp-validation-for="email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="d-block form-label">Language Known:</label>

        <div class="form-check form-check-inline">
            <input type="checkbox" class="form-check-input" id="english" name="languages" value="English"
            @(Model.languages != null && Model.languages.Contains("English") ? "checked" : "")>
            <label class="form-check-label" for="english">English</label>
        </div>

        <div class="form-check form-check-inline">
            <input type="checkbox" class="form-check-input" id="french" name="languages" value="French"
            @(Model.languages != null && Model.languages.Contains("French") ? "checked" : "")>
            <label class="form-check-label" for="french">French</label>
        </div>

        <div class="form-check form-check-inline">
            <input type="checkbox" class="form-check-input" id="hindi" name="languages" value="Hindi"
            @(Model.languages != null && Model.languages.Contains("Hindi") ? "checked" : "")>
            <label class="form-check-label" for="hindi">Hindi</label>
        </div>

        <div class="form-check form-check-inline">
            <input type="checkbox" class="form-check-input" id="spanish" name="languages" value="Spanish"
            @(Model.languages != null && Model.languages.Contains("Spanish") ? "checked" : "")>
            <label class="form-check-label" for="spanish">Spanish</label>
        </div>

        <div class="form-check form-check-inline">
            <input type="checkbox" class="form-check-input" id="arabic" name="languages" value="Arabic"
            @(Model.languages != null && Model.languages.Contains("Arabic") ? "checked" : "")>
            <label class="form-check-label" for="arabic">Arabic</label>
        </div>

        <div class="form-check form-check-inline">
            <input type="checkbox" class="form-check-input" id="italian" name="languages" value="Italian"
            @(Model.languages != null && Model.languages.Contains("Italian") ? "checked" : "")>
            <label class="form-check-label" for="italian">Italian</label>
        </div>

        <span asp-validation-for="languages" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <button type="reset" class="btn bg-soft-danger" onclick="window.location.href='@Url.Action("Profile", "User")'">Cancel</button>
</form>

