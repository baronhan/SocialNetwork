@model Neo4j.ViewModels.UpdatePersonalInformationVM

<form asp-controller="User" asp-action="UpdatePersonalInformation" method="post" enctype="multipart/form-data">
    <div class="form-group row align-items-center">
        <div class="col-md-12">
            <div class="profile-img-edit">
                <img class="profile-pic" src="@Model.ProfileImage" alt="@Model.Username">
                <div class="p-image">
                    <i class="ri-pencil-line upload-button text-white"></i>
                    <input class="file-upload" type="file" accept="image/*" name="profileImage" />
                </div>
            </div>
        </div>
    </div>
    <div class="row align-items-center">
        <div class="form-group col-sm-6">
            <label for="fname" class="form-label">First Name:</label>
            <input type="text" class="form-control" id="fname" name="firstname" value="@Model.Firstname" required placeholder="Enter your first name" />
        </div>
        <div class="form-group col-sm-6">
            <label for="lname" class="form-label">Last Name:</label>
            <input type="text" class="form-control" id="lname" name="lastname" value="@Model.Lastname" required placeholder="Enter your last name" />
        </div>
        <div class="form-group col-sm-6">
            <label for="uname" class="form-label">User Name:</label>
            <input type="text" class="form-control" id="uname" name="username" value="@Model.Username" required placeholder="Enter your username" />
        </div>
        <div class="form-group col-sm-6">
            <label for="city" class="form-label">City:</label>
            <input type="text" class="form-control" id="city" name="city" value="@Model.City" required placeholder="Enter your city" />
        </div>
        <div class="form-group col-sm-6">
            <label class="form-label d-block">Gender:</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio10" value="Male" @(Model.Gender == "Male" ? "checked" : "") />
                <label class="form-check-label" for="inlineRadio10"> Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio11" value="Female" @(Model.Gender == "Female" ? "checked" : "") />
                <label class="form-check-label" for="inlineRadio11"> Female</label>
            </div>
        </div>

        <div class="form-group col-sm-6">
            <label for="dob" class="form-label">Date Of Birth:</label>
            <input class="form-control" id="dob" name="dob" value="@Model.Dob.ToString("yyyy-MM-dd")" type="date" required />
        </div>
        <div class="form-group col-sm-6">
            <label class="form-label">Marital Status:</label>
            @Html.DropDownListFor(model => model.MaritalStatus, new SelectList(new[]
                     {
            new { Value = "Single", Text = "Single" },
            new { Value = "Married", Text = "Married" },
            new { Value = "Widowed", Text = "Widowed" },
            new { Value = "Divorced", Text = "Divorced" },
            new { Value = "Separated", Text = "Separated" }
            }, "Value", "Text", Model.MaritalStatus), new { @class = "form-select", required = "required" })

        </div>
        <div class="form-group col-sm-6">
            <label class="form-label">Age:</label>
            <input type="number" class="form-control" name="age" min="18" max="120" placeholder="Enter your age" value="@Model.Age" required />
        </div>

        <div class="form-group col-sm-6">
            <label class="form-label">Country:</label>
            @Html.DropDownListFor(model => model.Country,
                     new SelectList(new[]
                     {
            new { Value = "Vietnam", Text = "Vietnam" },
            new { Value = "Canada", Text = "Canada" },
            new { Value = "India", Text = "India" },
            new { Value = "USA", Text = "USA" },
            new { Value = "Australia", Text = "Australia" },
            new { Value = "United Kingdom", Text = "United Kingdom" },
            new { Value = "Germany", Text = "Germany" },
            new { Value = "France", Text = "France" },
            new { Value = "Japan", Text = "Japan" },
            new { Value = "China", Text = "China" },
            new { Value = "Brazil", Text = "Brazil" },
            new { Value = "South Africa", Text = "South Africa" },
            new { Value = "Mexico", Text = "Mexico" },
            new { Value = "Russia", Text = "Russia" },
            new { Value = "Italy", Text = "Italy" },
            new { Value = "Spain", Text = "Spain" },
            new { Value = "Netherlands", Text = "Netherlands" },
            new { Value = "Singapore", Text = "Singapore" },
            new { Value = "Sweden", Text = "Sweden" },
            new { Value = "Norway", Text = "Norway" },
            new { Value = "Finland", Text = "Finland" },
            new { Value = "Thailand", Text = "Thailand" }
            }, "Value", "Text", Model.Country),
                     new { @class = "form-select", required = "required" })
        </div>

        <div class="form-group col-sm-6">
            <label class="form-label">Address:</label>
            <textarea class="form-control" name="address" rows="5" required>@Model.Address</textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary me-2">Submit</button>
    <button type="button" class="btn bg-soft-danger" onclick="window.location.href='@Url.Action("Profile", "User")'">Cancel</button>
</form>